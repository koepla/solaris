{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Ninja"
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/build/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/build/${presetName}",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "win",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "TARGET_BUILD_PLATFORM": "win32"
      }
    },
    {
      "name": "lin",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "TARGET_BUILD_PLATFORM": "linux"
      }
    },
    {
      "name": "mac",
      "hidden": true,
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "TARGET_BUILD_PLATFORM": "mac"
      }
    },
    {
      "name": "win-64-debug",
      "inherits": [
        "win",
        "debug"
      ]
    },
    {
      "name": "win-64-release",
      "inherits": [
        "win",
        "release"
      ]
    },
    {
      "name": "lin-64-debug",
      "inherits": [
        "lin",
        "debug"
      ]
    },
    {
      "name": "lin-64-release",
      "inherits": [
        "lin",
        "release"
      ]
    },
    {
      "name": "mac-64-debug",
      "inherits": [
        "mac",
        "debug"
      ]
    },
    {
      "name": "mac-64-release",
      "inherits": [
        "mac",
        "release"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "jobs": 16
    },
    {
      "name": "win-64-debug",
      "configurePreset": "win-64-debug",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "win-64-release",
      "configurePreset": "win-64-release",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "lin-64-debug",
      "configurePreset": "lin-64-debug",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "lin-64-release",
      "configurePreset": "lin-64-release",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "mac-64-debug",
      "configurePreset": "mac-64-debug",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "mac-64-release",
      "configurePreset": "mac-64-release",
      "inherits": [
        "default"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ]
}